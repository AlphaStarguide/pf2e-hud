<form data-tooltip-direction="UP">
    <div class="form-group">
        <label>{{localize "TOKEN.ImagePath"}}</label>
        <div class="form-fields">
            <input type="text" placeholder="{{placeholder}}" disabled>
            <button class="fa-solid fa-file-import fa-fw" type="button"
                data-tooltip="FILES.BrowseTooltip" data-action="open-browser" {{disabled
                noBrowser}}>
            </button>
            <button class="fa-solid fa-image-portrait" type="button"
                data-tooltip="{{i18n.path 'src.actor'}}" data-action="use-actor-image">
            </button>
            <button class="fa-solid fa-circle-user" type="button"
                data-tooltip="{{i18n.path 'src.token'}}" data-action="use-token-image" {{disabled
                noTokenImage}}>
            </button>
        </div>
    </div>
    <div class="form-group buttons">
        <button type="button" data-action="save">
            <i class="fa-solid fa-floppy-disk"></i>
            {{i18n 'save'}}
        </button>
        <button type="button" data-action="cancel">
            <i class="fa-solid fa-xmark"></i>
            {{i18n 'cancel'}}
        </button>
        <div></div>
        <button type="button" data-action="contain">
            <i class="fa-solid fa-expand"></i>
            {{i18n 'contain'}}
        </button>
    </div>
</form>
<hr>
<div class="viewport">
    <div class="image"></div>
    <div class="border"></div>
</div>